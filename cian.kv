ScreenManager:
    id: screen_manager
    MenuScreen:
        id: menu_screen
        name: 'MenuScreen'
        manager: 'screen_manager'


<MenuScreen>:
    FloatLayout:
        background_normal: ''
        size_hint: ( 1, 1)
        background_color: 0, 0, 0, 1
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
        FloatLayout:
            size_hint: ( 0.4, 0.2)
            pos_hint: {"center_x":0.5,"center_y":0.8}
            canvas.before:
                Color:
                    rgba: 0.78,0.78,0.78,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                size_hint: ( 1, 1)
                pos_hint: {"center_x":0.5,"center_y":0.5}
                Label:
                    size_hint: ( 1, 1)
                    color: 'black'
                    pos_hint: {"center_x":0.1,"center_y":0.9}
                    text: 'Вам понравился продукт?'
            BoxLayout:
                pos_hint: {"center_x":0.1,"center_y":0.5}
                size_hint: ( 0.5, 0.4)
                orientation:'vertical'
                BoxLayout:
                    Label:

                        halign: 'right'
                        color: 'black'
                        text:'Да'
                        size_hint_x: 0.8

                    CheckBox:
                        id:nic_yes
                        color: 0,0,0,1
                        size_hint_x: 0.1
                        on_active: root.check_box_hendler1(self,self.active)
                BoxLayout:
                    Label:
                        color: 'black'
                        halign: 'right'
                        text:'Нет'
                        size_hint_x: 0.8

                    CheckBox:
                        id:nic_no
                        color: 0,0,0,1
                        size_hint_x: 0.1
                        on_active: root.check_box_hendler2(self,self.active)
        FloatLayout:
            size_hint: ( 0.4, 0.2)
            pos_hint: {"center_x":0.5,"center_y":0.58}
            canvas.before:
                Color:
                    rgba: 0.78,0.78,0.78,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                size_hint: ( 1, 1)
                pos_hint: {"center_x":0.5,"center_y":0.5}
                Label:
                    size_hint: ( 1, 1)
                    color: 'black'
                    pos_hint: {"center_x":0.1,"center_y":0.9}
                    text: 'Вы бы купили этот продукт?'
            BoxLayout:
                pos_hint: {"center_x":0.1,"center_y":0.5}
                size_hint: ( 0.5, 0.4)
                orientation:'vertical'
                BoxLayout:
                    Label:
                        halign: 'right'
                        color: 'black'
                        text:'Да'
                        size_hint_x: 0.8
                    CheckBox:
                        id:buy_yes
                        color: 0,0,0,1
                        size_hint_x: 0.1
                        on_active: root.check_box_hendler3(self,self.active)
                BoxLayout:
                    Label:
                        color: 'black'
                        halign: 'right'
                        text:'Нет'
                        size_hint_x: 0.8
                    CheckBox:
                        id:buy_no
                        color: 0,0,0,1
                        size_hint_x: 0.1
                        on_active: root.check_box_hendler4(self,self.active)

        FloatLayout:
            size_hint: ( 0.4, 0.2)
            pos_hint: {"center_x":0.5,"center_y":0.36}
            canvas.before:
                Color:
                    rgba: 0.78,0.78,0.78,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                size_hint: ( 1, 1)
                pos_hint: {"center_x":0.5,"center_y":0.5}
                Label:
                    size_hint: ( 1, 1)
                    color: 'black'
                    pos_hint: {"center_x":0.1,"center_y":0.9}
                    text: 'Опишите свое впечатление от товара'
            BoxLayout:
                pos_hint: {"center_x":0.7,"center_y":0.5}
                size_hint: ( 0.95, 0.6)
                orientation:'vertical'
                TextInput:
                    id:input
                    pos_hint: {"center_x":0.3,"center_y":0.5}
                    size_hint: ( 1, 1)
                    hint_text:'Мне очень понравилось...'
        Button:
            pos_hint: {"center_x":0.5,"center_y":0.15}
            size_hint: ( 0.2, 0.1)
            background_normal: ''
            background_color: 0.75, 0.75, 0.75, 1
            text: 'Отправить'
            color: 'black'
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 3
                    rectangle: self.x, self.y, self.width, self.height
            on_release:
                root.save_setting(self)
        Button:
            pos_hint: {"center_x":0.9,"center_y":0.9}
            size_hint: ( 0.11, 0.05)
            background_normal: ''
            background_color: 0.75, 0.75, 0.75, 1
            text: 'Результаты'
            color: 'black'
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 3
                    rectangle: self.x, self.y, self.width, self.height
            on_release:
                root.res(self)